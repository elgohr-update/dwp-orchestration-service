{
	"agent": {
		"run_as_user": "root"
	},
	"logs": {
		"logs_collected": {
			"files": {
				"collect_list": [
					{
						"file_path": "/var/log/sysdig.log",
						"log_group_name": "${cloudwatch_log_group}",
						"log_stream_name": "sysdig"
					},
					{
						"file_path": "/var/log/ecs_instance_health_check.log",
						"log_group_name": "${cloudwatch_log_group}",
						"log_stream_name": "ecs_instance_health_check"
					}
				]
			}
		}
	}
}
